
<style>
.alert{
  padding:20px;
  margin-bottom:20px;
  border: 1px solid black
}

  form{
    width: 20%;
    margin: 0 auto;
    border: 1px solid black;
    padding: 30px;
  }
</style>


<div class="d-flex align-items-center justify-content-center">
  <h1>Edit Your Profile</h1>
</div>
<%= form_with(model: @user,local: true) do |f| %>

  <% if @user.errors.any?  %>
    <div>
      <% @user.errors.full_messages.each do |messages| %>
        <div> <%= messages %> </div>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
  <%= f.label :name %><br/>
  <%= f.text_field :name ,class: "form-control-sm  input-sm" , placeholder: "name",required: true%>
</div>

<br/>
<div class="form-group">
  <%= f.label :email %><br/>
  <%= f.email_field :email,class: "form-control-sm  input-sm" , placeholder: "email" ,required: true%>
</div>

<br/>
<div class="form-group">
  <%= f.label :password %><br/>
  <%= f.password_field :password ,class: "form-control-sm  input-sm" , placeholder: "password",required: true %>
</div>

<br/>
<div class="form-group">
  <%= f.label :address %><br/>
  <%= f.text_area :address ,class: "form-control-sm  input-sm" , placeholder: "address", :cols => 24, :rows => 8 ,required: true%>
</div>

<br/>
<div class="form-group">
  <%= f.label :phone_number%><br/>
  <%= f.text_field :phone_number,class: "form-control-sm  input-sm" , placeholder: "phone number",required: true %>
</div>

<br/>


<br/>
<div>
<%= f.submit "Update", class: "btn btn-primary" %>
</div>
<% end %>