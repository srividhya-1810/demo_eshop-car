                      <span class="visually-hidden">Next</span>
                    </button>
                  </div>




                    <div class="row m-0 bg-light">
                        <div class="col-md-4 col-6 ps-30 pe-0 my-4">
                            <p class="text-muted">Brand</p>
                            <p class="h5"> <%= @car.brand  %></p>
                        </div>
                        <div class="col-md-4 col-6  ps-30 my-4">
                            <p class="text-muted">Car Type</p>
                            <p class="h5 m-0">
                                <% if @car.car_type==0 %>
                                    Suv
                                <% elsif @car.car_type==1 %>
                                    Hatchback
                                <% elsif @car.car_type==2 %>
                                    Crossover
                                <% elsif @car.car_type==3 %>
                                    Covertible 
                                <% elsif @car.car_type==4 %>
                                    Sedan
                                <% elsif @car.car_type==5 %>
                                    Sports 
                                <% elsif @car.car_type==6 %>
                                    Coupe
                                <% elsif @car.car_type==7 %>
                                    Minivan
                                <% elsif @car.car_type==8 %>
                                    Wagon
                                <% else %>
                                    Pick Up Truck
                                <% end %>
                            </p>
                        </div>
                        <div class="col-md-4 col-6 ps-30 my-4">
                            <p class="text-muted">Fuel Type</p>
