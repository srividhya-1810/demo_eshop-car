                                    Diesel 
                                <% elsif @car.fuel_type==2 %>
                                    Ethanol
                                <% elsif @car.fuel_type==3 %>
                                    Electric Battery
                                <% else %>
                                    Hydrogen
                                <% end %>
                            </p>
                        </div>
                        <div class="col-md-4 col-6 ps-30 my-4">
                            <p class="text-muted">Condition</p>
                            <p class="h5 m-0">
                                <% if @car.condition==0 %>
                                    New
                                <% else %>
                                    2nd Hand
                                <% end %>
                            </p>
                        </div>
                        <div class="col-md-4 col-6 ps-30 my-4">
                            <p class="text-muted">Color</p>
                            <p class="h5 m-0"><%= @car.color %></p>
                        </div>
                        <div class="col-md-4 col-6 ps-30 my-4">
                            <p class="text-muted">Status</p>
                            <p class="h5 m-0">
                            <% if @car.status==0 %>
                                <div style= "color: green;"> Available</div>
                                <% else %>
                                <div style= "color: #ff0000;"> Sold</div>
                                <% end %>
                            </p>
                        </div>
                    </div>
                    <% if @car.status==0 %>

