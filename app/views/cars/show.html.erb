}

</style>


<script>
var slideIndex = 1;
showDivs(slideIndex);

function plusDivs(n) {
  showDivs(slideIndex += n);
}

function showDivs(n) {
  var i;
  var x = document.getElementsByClassName("mySlides");
  if (n > x.length) {slideIndex = 1}
  if (n < 1) {slideIndex = x.length}
  for (i = 0; i < x.length; i++) {
    x[i].style.display = "none";  
  }
  x[slideIndex-1].style.display = "block";  
}
</script>



<div class="container">
        <div class="row m-0">
            <div class="col-lg-7 pb-5 pe-lg-5">
                <div class="row">
                    <div class="col-12 p-5">

                    <% c=1 %>
                    <% @car.images_as_thumbnails.each do |img| %>
                    <div class="w3-content w3-display-container">
                    <div class="mySlides">
                    
                        <%= link_to image_tag(img, size: "500x500"), img %>
                    </div>

                        
                    </div>
                         
                  <% end %>
                  <button class="w3-button w3-black w3-display-left" id="b1" onclick="plusDivs(-1)">&#10094;</button>
                    <button class="w3-button w3-black w3-display-right" id="b2" onclick="plusDivs(1)">&#10095;</button>
                   
                    
                    
 
                        

                    <div class="row m-0 bg-light">
                        <div class="col-md-4 col-6 ps-30 pe-0 my-4">
                            <p class="text-muted">Brand</p>
                            <p class="h5"> <%= @car.brand  %></p>
                        </div>
                        <div class="col-md-4 col-6  ps-30 my-4">
                            <p class="text-muted">Car Type</p>
                            <p class="h5 m-0">
                                <% if @car.car_type==0 %>
                                    Suv
                                <% elsif @car.car_type==1 %>
                                    Hatchback
                                <% elsif @car.car_type==2 %>
                                    Crossover
                                <% elsif @car.car_type==3 %>
                                    Covertible 
                                <% elsif @car.car_type==4 %>
                                    Sedan
                                <% elsif @car.car_type==5 %>
                                    Sports 
                                <% elsif @car.car_type==6 %>
                                    Coupe
                                <% elsif @car.car_type==7 %>
                                    Minivan
                                <% elsif @car.car_type==8 %>
                                    Wagon
                                <% else %>
                                    Pick Up Truck
                                <% end %>
                            </p>
                        </div>
                        <div class="col-md-4 col-6 ps-30 my-4">
                            <p class="text-muted">Fuel Type</p>
                            <p class="h5 m-0">
                               <% if @car.fuel_type==0 %>
                                    Petrol
                                <% elsif @car.fuel_type==1 %>
                                    Diesel 
                                <% elsif @car.fuel_type==2 %>
                                    Ethanol
                                <% elsif @car.fuel_type==3 %>
                                    Electric Battery
                                <% else %>
                                    Hydrogen
                                <% end %>
                            </p>
                        </div>
                        <div class="col-md-4 col-6 ps-30 my-4">
                            <p class="text-muted">Condition</p>
                            <p class="h5 m-0">
                                <% if @car.condition==0 %>
                                    New
                                <% else %>
                                    2nd Hand
                                <% end %>
                            </p>
                        </div>
                        <div class="col-md-4 col-6 ps-30 my-4">
                            <p class="text-muted">Color</p>
                            <p class="h5 m-0"><%= @car.color %></p>
                        </div>
                        <div class="col-md-4 col-6 ps-30 my-4">
                            <p class="text-muted">Status</p>
                            <p class="h5 m-0">
                            <% if @car.status==0 %>
                                <div style= "color: green;"> Available</div>
                                <% else %>
                                <div style= "color: #ff0000;"> Sold</div>
                                <% end %>
                            </p>
                        </div>
                    </div>
                    <% if @car.status==0 %>
                    <div class="row m-0">

                    <div class="btn btn-primary"><%= link_to 'Purchase', checkout_path(@car) %><span class="fas fa-arrow-right ps-2"></span>
                    </div>
                    <% end %>
                </div>
            </div>





        
        