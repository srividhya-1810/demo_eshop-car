
<style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@500&family=Work+Sans:wght@800&display=swap');


* {
    padding: 0;
    margin: 0;
    box-sizing: border-box;

}



.container {
    margin: 20px auto;
    max-width: 2000px;
    height: 1000px;
    background-color: white;
    padding: 50px;
    padding-left: 625px;
}


.form-control {
    height: 25px;
    width: 150px;
    border: none;
    border-radius: 0;
    font-weight: 800;
    padding: 0 0 5px 0;
    background-color: transparent;
    box-shadow: none;
    outline: none;
    border-bottom: 2px solid #ccc;
    margin: 0;
    font-size: 14px;
}

.form-control:focus {
    box-shadow: none;
    border-bottom: 2px solid #ccc;
    background-color: transparent;
}

.form-control2 {
    font-size: 14px;
    height: 20px;
    width: 55px;
    border: none;
    border-radius: 0;
    font-weight: 800;
    padding: 0 0 5px 0;
    background-color: transparent;
    box-shadow: none;
    outline: none;
    border-bottom: 2px solid #ccc;
    margin: 0;
}

.form-control2:focus {
    box-shadow: none;
    border-bottom: 2px solid #ccc;
    background-color: transparent;
}

.form-control3 {
    font-size: 14px;
    height: 20px;
    width: 30px;
    border: none;
    border-radius: 0;
    font-weight: 800;
    padding: 0 0 5px 0;
    background-color: transparent;
    box-shadow: none;
    outline: none;
    border-bottom: 2px solid #ccc;
    margin: 0;
}

.form-control3:focus {
    box-shadow: none;
    border-bottom: 2px solid #ccc;
    background-color: transparent;
}

p {
    margin: 0;
}

img {
    width: 100%;
    height: 100%;
    object-fit: fill;
}

.text-muted {
    font-size: 10px;
}

.textmuted {
    color: #6c757d;
    font-size: 13px;
}

.fs-14 {
    font-size: 14px;
}

.btn.btn-primary {
    width: 100%;
    height: 55px;
    border-radius: 0;
    padding: 13px 0;
    background-color: black;
    border: none;
    font-weight: 600;
}

.btn.btn-primary:hover .fas {
    transform: translateX(10px);
    transition: transform 0.5s ease
}


.fw-900 {
    font-weight: 900;
}

::placeholder {
    font-size: 12px;
}

.ps-30 {
    padding-left: 30px;
}

.h4 {
    font-family: 'Work Sans', sans-serif !important;
    font-weight: 800 !important;
}

.textmuted,
h5,
.text-muted {
    font-family: 'Poppins', sans-serif;
}




.fcc-btn {
  background-color: black;
  color: white;
  padding: 15px 25px;
  text-decoration: none;
  cursor: pointer;
  border: none;
  text-align: center;
}

.linkto{
  color: rgb(14, 78, 141);
  font-weight: bold;
  padding-left: 30px;
  text-decoration: none;
}

</style>

<%= link_to 'Back' , :back, class:"linkto"%>



<div class="container">
        <div class="row m-0">
            <div class="col-lg-7 pb-5 pe-lg-5">
                <div class="row">
                    <div class="col-12 p-5">


                    

                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                            <% @car.images.each do |img| %>
                            <% if @car.images.first==img %>
                              <div class="carousel-item active">
                                <%= image_tag(img,size:"500x500" ) %>
                              </div>
                              <% else %>
                              <div class="carousel-item">
                                <%= image_tag(img) %>
                              </div>
                              <% end %>
                            <% end %>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Next</span>
                            </button>
                          </div>

                    
                        

                   
                    
                 





                    <div class="row m-0 bg-light">
                        <div class="col-md-4 col-6 ps-30 pe-0 my-4">
                            <p class="text-muted">Brand</p>
                            <p class="h5"> <%= @car.brand  %></p>
                        </div>
                        <div class="col-md-4 col-6  ps-30 my-4">
                            <p class="text-muted">Car Type</p>
                            <p class="h5 m-0">
                                <% if @car.car_type==0 %>
                                    Suv
                                <% elsif @car.car_type==1 %>
                                    Hatchback
                                <% elsif @car.car_type==2 %>
                                    Crossover
                                <% elsif @car.car_type==3 %>
                                    Covertible 
                                <% elsif @car.car_type==4 %>
                                    Sedan
                                <% elsif @car.car_type==5 %>
                                    Sports 
                                <% elsif @car.car_type==6 %>
                                    Coupe
                                <% elsif @car.car_type==7 %>
                                    Minivan
                                <% elsif @car.car_type==8 %>
                                    Wagon
                                <% else %>
                                    Pick Up Truck
                                <% end %>
                            </p>
                        </div>
                        <div class="col-md-4 col-6 ps-30 my-4">
                            <p class="text-muted">Fuel Type</p>
                            <p class="h5 m-0">
                               <% if @car.fuel_type==0 %>
                                    Petrol
                                <% elsif @car.fuel_type==1 %>
                                    Diesel 
                                <% elsif @car.fuel_type==2 %>
                                    Ethanol
                                <% elsif @car.fuel_type==3 %>
                                    Electric Battery
                                <% else %>
                                    Hydrogen
                                <% end %>
                            </p>
                        </div>
                        <div class="col-md-4 col-6 ps-30 my-4">
                            <p class="text-muted">Condition</p>
                            <p class="h5 m-0">
                                <% if @car.condition==0 %>
                                    New
                                <% else %>
                                    2nd Hand
                                <% end %>
                            </p>
                        </div>
                        <div class="col-md-4 col-6 ps-30 my-4">
                            <p class="text-muted">Color</p>
                            <p class="h5 m-0"><%= @car.color %></p>
                        </div>
                        <div class="col-md-4 col-6 ps-30 my-4">
                            <p class="text-muted">Status</p>
                            <p class="h5 m-0">
                            <% if @car.status==0 %>
                                <div style= "color: green;"> Available</div>
                                <% else %>
                                <div style= "color: #ff0000;"> Sold</div>
                                <% end %>
                            </p>
                        </div>
                    </div>

                    <% if @car.status==0 %>
                        <div class='fcc-btn'>

                            <% if current_user.user_type==2 %>
                            <%= link_to 'Purchase', checkout_path(@car)  %>

                            <% else %>
                            <%= link_to 'Edit', edit_car_path(@car)  %>

                            <% end %>
                        </div>

                        
                     <% end %>
                </div>
            </div>


