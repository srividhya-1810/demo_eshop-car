<style>
    h1{
        text-align: center;
        color: blueviolet;
    }
    .centerit {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 150px;
        
      }
      textarea {
    display: block;
    margin-left: auto;
    margin-right: auto;
}
    .comment{
        text-align: center;
        font-size: 2.5em;
    }
    .but{
        display: flex;
        justify-content: center;
        align-items: center;
        height: 200px;
        
    }
    h2{
        text-align: center;
    }

    .linkto{
  color: rgb(14, 78, 141);
  font-weight: bold;
  padding-left: 30px;
  text-decoration: none;
}

</style>

<%= link_to 'Back', :back ,class:"linkto" %>


<br/><br/><br/>
<% if @order_details.comment.blank? && current_user.id!=@order_details.user_id%>
    <h2> Buyer didn't post a comment </h2>
<% else %>

    <% if @order_details.user_id==current_user.id %>
        <%= form_with(model: @order_details,local: true,url:add_comment_path(@order_details) ) do |f| %>
            
            <div class="form-group">
            <div class="comment"> <%= f.label :comment %><br/></div>
            <br/><br/>
                <%= f.text_area :comment ,size:"50x4" %>
            </div>
           
            <div class="but">
            <%= f.submit "Add", class: "btn btn-primary" %>
            </div>
        <% end %>

    <% else %>
    <div class="comment"> Comment</div>
    <br/><br/>
        <div class="form-group">
            <textarea rows="4" cols="50"   readonly><%= @order_details.comment %></textarea>
        </div>
    <%end%>
   

<% end %>
